<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

    <TextView
            android:text="task_text"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:id="@+id/textView_descript"
            android:layout_marginTop="8dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toTopOf="@+id/textView_date"
            tools:text="reminder_text"
            app:layout_constraintEnd_toStartOf="@+id/button_edit_reminder"
            android:layout_marginEnd="8dp"
            android:layout_marginRight="8dp"
            app:layout_constraintStart_toEndOf="@+id/imageView"
            android:layout_marginLeft="8dp"
            android:layout_marginStart="8dp" />

    <TextView
            android:text="task_date"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:id="@+id/textView_date"
            app:layout_constraintTop_toBottomOf="@+id/textView_descript"
            app:layout_constraintBottom_toTopOf="@+id/textView_time"
            tools:text="reminder_date"
            app:layout_constraintEnd_toStartOf="@+id/button_edit_reminder"
            android:layout_marginEnd="8dp"
            android:layout_marginRight="8dp"
            app:layout_constraintStart_toEndOf="@+id/imageView"
            android:layout_marginLeft="8dp"
            android:layout_marginStart="8dp" />

    <TextView
            android:text="task_time"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:id="@+id/textView_time"
            app:layout_constraintTop_toBottomOf="@+id/textView_date"
            tools:text="reminder_time"
            app:layout_constraintEnd_toStartOf="@+id/button_edit_reminder"
            android:layout_marginEnd="8dp"
            android:layout_marginRight="8dp"
            app:layout_constraintStart_toEndOf="@+id/imageView"
            android:layout_marginLeft="8dp"
            android:layout_marginStart="8dp"
            android:layout_marginBottom="8dp"
            app:layout_constraintBottom_toBottomOf="parent" />

    <ImageButton
            android:layout_width="40dp"
            android:layout_height="40dp"
            app:srcCompat="@android:drawable/ic_menu_delete"
            android:id="@+id/button_delete_reminder"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="16dp"
            android:layout_marginRight="16dp"
            android:layout_marginTop="8dp"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginBottom="8dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintVertical_bias="0.555"
            android:layout_marginStart="8dp"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginLeft="8dp"
            app:layout_constraintHorizontal_bias="1.0"
            android:background="#022002" />

    <ImageButton
            android:layout_width="40dp"
            android:layout_height="40dp"
            app:srcCompat="@android:drawable/ic_menu_manage"
            android:id="@+id/button_edit_reminder"
            app:layout_constraintEnd_toStartOf="@+id/button_delete_reminder"
            android:layout_marginTop="8dp"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginBottom="8dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginLeft="8dp"
            android:layout_marginStart="8dp"
            app:layout_constraintHorizontal_bias="1.0"
            app:layout_constraintVertical_bias="0.555"
            android:background="#022002" />

    <ImageView
            android:layout_width="45dp"
            android:layout_height="45dp"
            app:srcCompat="@mipmap/reminder"
            android:id="@+id/imageView"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginLeft="8dp"
            android:layout_marginStart="8dp"
            android:layout_marginTop="8dp"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginBottom="8dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="8dp"
            android:layout_marginRight="8dp"
            app:layout_constraintHorizontal_bias="0.022"
            app:layout_constraintVertical_bias="0.444" />
</android.support.constraint.ConstraintLayout>
